{
	"compilerOptions": {
		"module": "commonjs",
		// ES2016 supports node >=7.5.0, according to https://node.green/#ES2016
		"target": "ES2016",
		"moduleResolution": "node",
		"sourceMap": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"declarationMap": true,
		"importHelpers": true,
		"listFiles": false,
		"traceResolution": false,
		"lib": ["ESNext"],
		"types": ["node"]
	}
}
